<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:textColor="@color/textTitle"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Mengenal Binding View"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subHeader"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/viewBin"
            android:text="Tugas ini dibuat untuk memenuhi tugas pada pertemuan ke-18"
            android:textStyle="normal"
            android:textSize="9.5sp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnKtSyn"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="Kotlin Synthetic"
            android:background="@color/kotlinSyn"
            android:textColor="@color/textColor"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/fdById"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="Find View by Id"
            android:background="@color/fdById"
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/dataBin"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="Data Binding"
            android:background="@color/dataBin"
            android:textColor="@color/textColor"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/viewBin"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="View Binding"
            android:background="@color/viewBin"
            android:textColor="@color/textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>
